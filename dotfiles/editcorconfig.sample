# プロジェクト単位でのコーディング規約を揃えるために
# リポジトリのrootディレクトリにおいておく.editorconfigファイルのサンプル
# @see http://www.tam-tam.co.jp/tipsnote/program/post6306.html
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

charset = utf-8

[*.md]
charset = utf-8
indent_size = 4

[*.php]
indent_size = 4

[*.js]
indent_size = 4

[*.css]
indent_size = 4

[*.{html,scss,coffee}]
indent_size = 2

[Makefile]
indent_style = tab
